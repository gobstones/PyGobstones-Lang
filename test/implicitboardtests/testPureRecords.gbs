#!assert

type Pair is record {
	field x
	field y
}

function invertPair(p) {
	return(Pair(x <- y(p), y <- x(p)))
}

type Persona is record {
	field nombre
	field dni 
	field edad
}

function justTest() {
	r1 := Persona(nombre <- "Javier",
									dni <- "0",
									edad <- 20)
	nombreR1 := nombre(r1)
	
	r2 := Persona(r1|nombre <- "Ramiro")
	nombreR2 := nombre(r2)
	
	r3 := Persona(r2|dni <- "4433353")
	dniR3 := dni(r3)
	
	r4 := Persona(r3 | edad <- 44)
	edadR4 := edad(r4)
	return(nombreR1 == "Javier" && nombreR2 == "Ramiro" && dniR3 == "4433353" && edadR4 == 44)
}

function pairTest() {
	p := Pair(x <- 2, y <- 0)
	q := Pair(p | y <- 2)
	s := Pair(q | x <- 0)
	return(p == invertPair(s))
}

program {
	passed := justTest()
	passed := passed && pairTest()
	return(passed)
}